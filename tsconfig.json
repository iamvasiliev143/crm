{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "strict": true,

    "paths": {
      "@core/db/entities": ["./apps/core/src/db/_entities"],

      "@core/admin/controllers": ["./apps/core/src/admin/_controllers"],
      "@core/admin/dtos": ["./apps/core/src/admin/_dtos"],
      "@core/admin/services": ["./apps/core/src/admin/_services"],

      "@core/trader/controllers": ["./apps/core/src/trader/_controllers"],
      "@core/trader/dtos": ["./apps/core/src/trader/_dtos"],
      "@core/trader/services": ["./apps/core/src/trader/_services"],

      "@shared/configs": ["./apps/main/src/shared/configs"],
      "@shared/entities": ["./apps/main/src/shared/_entities"],
      "@shared/modules": ["./apps/main/src/shared/modules"],
    }
  }
}
